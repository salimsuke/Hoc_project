<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ai.api.sample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" android:protectionLevel="signature"/>
    <application
        android:screenOrientation="portrait"
        android:name="ai.boubaker.hoc.AIApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="ai.boubaker.hoc.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="ai.boubaker.hoc.AIButtonSampleActivity"
            android:label="@string/title_activity_aibutton_sample"
            android:parentActivityName="ai.boubaker.hoc.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ai.boubaker.hoc.MainActivity" />

        </activity>

        <activity
            android:name="ai.boubaker.hoc.AIServiceSampleActivity"
            android:label="@string/title_activity_aiservice_sample"
            android:parentActivityName="ai.boubaker.hoc.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ai.boubaker.hoc.MainActivity" />
        </activity>

        <activity
            android:name="ai.boubaker.hoc.AIDialogSampleActivity"
            android:label="@string/title_activity_aidialog_sample"
            android:parentActivityName="ai.boubaker.hoc.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ai.boubaker.hoc.MainActivity" />
        </activity>

        <activity
            android:name="ai.boubaker.hoc.AISettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName="ai.boubaker.hoc.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ai.boubaker.hoc.MainActivity" />
        </activity>
            
        <activity
            android:name="ai.boubaker.hoc.AIWidgetActivity"
            android:label="@string/app_name"
            android:theme="@style/Base.Theme.AppCompat.Dialog">

        </activity>

        <activity
            android:name="ai.boubaker.hoc.AITextSampleActivity"
            android:label="@string/title_activity_aitext_sample"
            android:parentActivityName="ai.boubaker.hoc.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ai.boubaker.hoc.MainActivity" />
        </activity>

        <receiver android:name="ai.boubaker.hoc.AISampleAppWidget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/ai_app_widget_info" />
        </receiver>

    </application>

</manifest>
